<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
android:layout_marginEnd="100dp"
        android:layout_width="wrap_content"
    android:layout_marginBottom="20dp"
    android:padding="10dp"

    android:layout_height="wrap_content">

    <RelativeLayout

        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/custome_layout_posterImage"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:layout_alignParentStart="true"

            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop"
             />

        <TextView
            android:id="@+id/txtname"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/custome_layout_posterImage"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"

            android:text="Passenger"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtname"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif-medium"
            android:text="28-09-2019"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtname"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="55dp"
            android:fontFamily="sans-serif-medium"
            android:text="9.9"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/txtdate"
            android:layout_alignParentStart="true"
            android:layout_marginStart="44dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_star"
             />

        <ImageView
            android:id="@+id/custome_layout_imageLike_dislike"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:layout_below="@+id/custome_layout_posterImage"
            android:layout_marginStart="50dp"
            android:layout_marginTop="79dp"

            android:layout_toEndOf="@+id/imageView2"
            android:src="@drawable/ic_empty_heart"></ImageView>



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
