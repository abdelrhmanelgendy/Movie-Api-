<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"





    android:orientation="vertical"



    app:cardCornerRadius="50dp">


    <View

        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginTop="1dp"
        android:background="#FAFAFA"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_background"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"


        >

        <ImageView
            android:id="@+id/custom_movie_poster"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/poster"></ImageView>

        <TextView
            android:id="@+id/custom_movie_txtname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-6dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/custom_movie_poster"
            android:text="Passengers "
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"></TextView>

        <TextView
            android:id="@+id/custom_movie_txtdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/custom_movie_txtname"
            android:layout_marginStart="1dp"
            android:layout_marginTop="18dp"
            android:layout_toEndOf="@+id/custom_movie_poster"
            android:text="20/26/2020"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp"></TextView>

        <ImageView
            android:id="@+id/custom_movie_likedimage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignStart="@id/custom_movie_poster"
            android:layout_alignParentTop="true"
            android:layout_marginStart="312dp"
            android:layout_marginTop="63dp"
            android:src="@drawable/ic_filld_heart"></ImageView>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>